generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  firstName String
  lastName  String

  todos     Todo[]
}

model Todo {
  id          Int     @id @default(autoincrement())
  title       String
  description String?
  done        Boolean @default(false)

  userId      Int
  user        User    @relation(fields: [userId], references: [id])
}
